<script>
  function refreshPage(){
    window.location.reload();
  }
</script>

<div class="upload-button-wrapper">
  <%= link_to '<button class="upload-video-button" type="button">Convert Video to Ascii</button>'.html_safe, edit_video_path(@video) %>
</div>

<p>
  <div>
    <% video_tag(url_for(@video.clip), style:'width:100%;height:auto', controls: '') %>
  </div>

  <video
  id="my-video"
  class="video-js"
  controls
  preload="auto"
  width="640"
  height="264"
  data-setup="{}"
  >
  <source src="<%= url_for(@video.clip)%>" type="video/mp4" />
  </video>
</p>

<div class="view-ascii-button-div">
  <button id="ascii-refresh" type="button" onClick="refreshPage()">View Ascii</button>
</div>

